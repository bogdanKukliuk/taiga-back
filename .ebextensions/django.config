container_commands:
  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "python manage.py loaddata initial_project_templates"
    leader_only: true
  03_collectstatic:
    command: "python manage.py compilemessages"
    leader_only: true
  04_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true
  04_collectstatic:
    command: "python manage.py runserver"
    leader_only: true

option_settings:
"aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "settings.config"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: taiga/wsgi.py
